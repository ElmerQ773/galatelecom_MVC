extends ../layout/index

block  contenido
  
 div(class="min-h-screen bg-gray-100 text-gray-900 flex justify-center")
    div(class="max-w-screen-xl m-0 sm:m-10 bg-white shadow sm:rounded-lg flex justify-center flex-1")
        div(class="lg:w-1/2 xl:w-5/12 p-6 sm:p-12")
            div
                img(src="/img/logo_galait.jpg" class="w-32 mx-auto")
            div 

                if errores 
                    div(class="max-w-md mx-auto my-10")
                         each error in errores 
                             p(class="bg-red-600 text-white uppercase rounded-3xl text-xs text-center p-2 mb-1 font-bold")= error.msg
            

            div(class="mt-5 flex flex-col items-center")
                h1(class="text-2xl xl:text-3xl font-extrabold")= pagina
                    
                
                div(class="w-full flex-1 mt-5")
                    div(class="flex flex-col items-center")
                            
                    

                    div(class="mb-5 border-b text-center")
                        div(class="leading-none px-2 inline-block text-sm text-gray-600 tracking-wide font-medium bg-white transform translate-y-1/2")
                        

                    div(class="mx-auto max-w-xs")
                      form(action="/auth/registro" method="POST" noValidate)
                        //imput(type="hidden" name="_csrf" value="{{csrfToken}}")
                        label(for="nombre")
                        input(class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white mt-5" type="text" placeholder="Nombre" name="nombre" value= usuario ? usuario.nombre : "")
                        label(for="apellido")
                        input(class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white mt-5" type="text" placeholder="Apellido" name="apellido" value= usuario ? usuario.apellido : "")
                        label(for="email")
                        input(class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white mt-5" type="email" placeholder="Correo Electronico" name="email" value= usuario ? usuario.email : "")
                        label(for="password")
                        input(class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white mt-5" type="password" placeholder="Contrase単a" name="password")
                        label(for="repetir_password")
                        input(class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white mt-5" type="password" placeholder="Repetir Contrase単a" name="repetir_password")
                        
                        button(type="submit" class="mt-8 tracking-wide font-semibold bg-blue-700 text-gray-100 w-full py-4 rounded-lg hover:bg-green-400 transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none")
                            input(type="submit" value="")
                            svg(class="w-6 h-6 -ml-2" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
                                path(d="M16 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2")
                                circle(cx="8.5" cy="7" r="4")
                                path(d="M20 8v6M23 11h-6")
                            
                            span(class="ml-3") Crear Cuenta
                    
                    
                    div(class="my-8 flex items-center justify-between")
                        a(class="text-gray-500" href="/auth/login") 多Ya Tienes Cuenta? Inicia Sesion
                        a(class="text-gray-500" href="/auth/olvide-password") Olvide mi Contrse単a
                        
                       
                                
                            
                    div(class="my-5")
                        p(class="mt-6 text-xs text-gray-600 text-center") Estoy de acuerdo con
                            
                            a(href="#" class="border-b border-gray-500 border-dotted") los terminos de servicio
                                
                            
                            
                            a(href="#" class="border-b border-gray-500 border-dotted") y la politica de privacidad
                                
                            
        
        div(class="flex-1 bg-indigo-100 rounded-xl text-center hidden lg:flex")
            div(class=" w-full object-cover rounded-xl bg-contain bg-center bg-no-repeat")
                img(src="/img/mujer.jpg" class="rounded-xl")
        
    
