extends ../layout/index

block  contenido
    
    div(class="max-w-screen-xl m-0 sm:m-10 bg-white shadow sm:rounded-lg flex justify-center flex-1")
        div(class="mt-12 lg:w-1/2 xl:w-5/12 p-6 sm:p-12")
            div
                img(src="/img/logo_galait.jpg" class="w-32 mx-auto")
            
            div(class="mt-5 flex flex-col items-center")
                h1(class="text-2xl xl:text-3xl font-extrabold")= pagina
                    
                if errores 
                    div(class="max-w-md mx-auto my-10")
                         each error in errores 
                             p(class="bg-red-600 text-white uppercase rounded-3xl text-xs text-center p-2 mb-1 font-bold")= error.msg

                div(class="w-full flex-1 mt-5")
                    div(class="flex flex-col items-center")
                            
                    

                    div(class="mb-5 border-b text-center")
                        div(class="leading-none px-2 inline-block text-sm text-gray-600 tracking-wide font-medium bg-white transform translate-y-1/2")
                        

                    div(class="mx-auto max-w-xs")
                        form(method="POST" action="/auth/login") 
                            input(class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white mt-5" type="email" placeholder="Correo Electronico" name="email")
                            input(class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white mt-5" type="password" placeholder="Contraseña" name="password")
                        
                        
                            button(type="submit" value="Crear Cuenta" class="mt-5 tracking-wide font-semibold bg-blue-700 text-gray-100 w-full py-4 rounded-lg hover:bg-green-400 transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none")
                                svg(class="w-6 h-6 -ml-2" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
                                    path(d="M16 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2")
                                    circle(cx="8.5" cy="7" r="4")
                                    path(d="M20 8v6M23 11h-6")
                                
                                span(class="ml-3") Iniciar Sesion

                    div(class="my-8 flex items-center justify-between")
                        a(class="text-gray-500" href="/auth/registro") ¿Aun no tienes una cuenta? Crea Una
                        a(class="text-gray-500" href="/auth/olvide-password") Olvide mi Contrseña            
                            
                    div(class="my-5")                        
                        p(class="mt-6 text-xs text-gray-600 text-center") Estoy de acuerdo con
                            
                            a(href="#" class="border-b border-gray-500 border-dotted") los terminos de servicio
                                
                            
                            
                            a(href="#" class="border-b border-gray-500 border-dotted") y la politica de privacidad
                                
                            
                        
        div(class="flex-1 bg-indigo-100 rounded-xl text-center hidden lg:flex")
            div(class=" w-full object-cover rounded-2xl bg-contain bg-center bg-no-repeat")
                img(src="/img/mujer.jpg" class="rounded-2xl")
        
    
